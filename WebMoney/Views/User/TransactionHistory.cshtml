@model List<WebMoney.Models.TransferHistory>
@using System.Security.Claims;
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<h2>@Localizer["История транзакций"]</h2>

@if (Model.Count == 0)
{
    <p>@Localizer["У вас пока нет транзакций."]</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>@Localizer["Дата"]</th>
                <th>@Localizer["Отправитель"]</th>
                <th>@Localizer["Получатель"]</th>
                <th>@Localizer["Тип"]</th>
                <th>@Localizer["Сумма"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transaction in Model)
            {
                <tr>
                    <td>@transaction.TransactionDate</td>
                    <td>@transaction.User.UserName</td>
                    <td>@(transaction.Receiver != null ? transaction.Receiver.UserName : @Localizer["N|A"])</td>
                    <td>@transaction.Type</td>
                    <td>@transaction.Amount</td>
                </tr>
            }
        </tbody>
    </table>
}

