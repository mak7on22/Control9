@model WebMoney.Models.User
@using System.Security.Claims;
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{

}
<head>
	<meta charset="UTF-8">
	<title>@Localizer["Кошелёк"]</title>
	<link rel="stylesheet" href="~/css/Lkss.css">
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
</head>

<header class="container">
	<div class="panels" style="display: flex;flex-direction: column;align-items: center;gap: 20px;">

		<div class="flog">
			<div class="log" style="display: flex; justify-content: space-around; margin-top: 20px;">
				<h3 class="Username" style="margin-bottom: 20px; color: @(Model.RoleName == "Admin" ? "red" : "green");">
					@Localizer[$"{@Model.RoleName}"]
				</h3>
			</div>
		</div>
		<div class="sss2" style="font-size: xx-large;font-weight: 700; color: white;">
			<div class="ss2">
				<div>
					<h1 style="display: flex;gap: 20px;"><p>Логин: </p>@Model.UserName</h1>
					<h3 style="display: flex;gap: 20px;"><p>Номер телефона: </p>@Model.PhoneNumber</h3>
					<h6 style="display: flex;gap: 20px;"><p style="all: unset;">@Localizer["Индификатор: "] </p>@Model.Indificator</h6>
				</div>
				<h6 style="display: flex;gap: 10px;"><p style="all: unset;">@Localizer["Баланс: "] </p> @Model.Balance <p>₽</p></h6>
			</div>
		</div>
		<div>
			<a asp-controller="User" asp-action="Replenish" asp-route-id="@int.Parse(userManager.GetUserId(User))" class="btn btn-success">@Localizer["Перевод"]</a>
		</div>
		<div>
			<a asp-controller="User" asp-action="TransactionHistory" class="btn btn-success">@Localizer["История переводов"]</a>
		</div>
		<div>
			<a class="btn btn-primary m-2" asp-controller="Companies" asp-action="Index">@Localizer["Оплатить услуги"]</a>
		</div>
	</div>
</header>
